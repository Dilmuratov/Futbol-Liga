<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/gilroy_regular"
        android:text="Sazlamalar"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gilroy_regular"
        android:text="Mámleketler boyınsha"
        android:textSize="20sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_country_1"
                android:layout_width="48dp"
                android:layout_height="38dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_select_img"
                android:padding="4dp"
                android:src="@drawable/ic_unknown" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_country_2"
                android:layout_width="48dp"
                android:layout_height="38dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_select_img"
                android:padding="4dp"
                android:src="@drawable/ic_unknown" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_country_3"
                android:layout_width="48dp"
                android:layout_height="38dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_select_img"
                android:padding="4dp"
                android:src="@drawable/ic_unknown" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_country_4"
                android:layout_width="48dp"
                android:layout_height="38dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_select_img"
                android:padding="4dp"
                android:src="@drawable/ic_unknown" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_country_5"
                android:layout_width="48dp"
                android:layout_height="38dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_select_img"
                android:padding="4dp"
                android:src="@drawable/ic_unknown" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_country_6"
                android:layout_width="48dp"
                android:layout_height="38dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_select_img"
                android:padding="4dp"
                android:src="@drawable/ic_unknown" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_country_7"
                android:layout_width="48dp"
                android:layout_height="38dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_select_img"
                android:padding="4dp"
                android:src="@drawable/ic_unknown" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_country_8"
                android:layout_width="48dp"
                android:layout_height="38dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_select_img"
                android:padding="4dp"
                android:src="@drawable/ic_unknown" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>